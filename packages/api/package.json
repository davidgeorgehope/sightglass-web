{
  "name": "@sightglass/api",
  "version": "0.1.0",
  "description": "Sightglass hosted API server",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build": "tsup src/server.ts --format esm",
    "dev": "tsup src/server.ts --format esm --watch --onSuccess 'node dist/server.js'",
    "start": "node dist/server.js",
    "test": "vitest run",
    "typecheck": "tsc --noEmit"
  },
  "author": "David Hope",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^11.0.0",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.0",
    "express": "^4.21.0",
    "jsonwebtoken": "^9.0.0",
    "chalk": "^5.3.0",
    "uuid": "^10.0.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/better-sqlite3": "^7.6.0",
    "@types/cors": "^2.8.0",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/node": "^22.0.0",
    "@types/uuid": "^10.0.0",
    "tsup": "^8.3.0",
    "typescript": "^5.6.0",
    "vitest": "^2.1.0"
  }
}
